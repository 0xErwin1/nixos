#!/usr/bin/env bash
set -euo pipefail

choices=$(
  cat <<'EOF'
Boot: Workspaces
Boot: Work applications
EOF
)

pick="$(printf '%s\n' "$choices" | wofi --dmenu --prompt "Actions")" || exit 0

case "$pick" in
  "Boot: Workspaces")
    ~/.local/bin/workspace_boot
    ;;
  "Boot: Work applications")
    ~/.local/bin/work_boot
    ;;
  "")
    exit 0
    ;;
  *)
    exit 0
    ;;
esac
